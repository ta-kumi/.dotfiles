{
  // =====================================================
  // 基本設定
  // =====================================================
  // WelcomPage非表示
  "workbench.startupEditor": "none",
  // 更新通知非表示
  "update.showReleaseNotes": false,
  // 空ファイルのヒント非表示
  "workbench.editor.empty.hint": "hidden",
  // 新規ワークスペースを別ウインドウで開く
  "window.openFoldersInNewWindow": "on",
  // ウインドウ上部に表示する文字列の設定
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  // タブに表示する文字列の設定
  "workbench.editor.labelFormat": "short",
  // タブの表示設定
  "workbench.editor.tabSizing": "shrink",
  // ファイルエンコード
  "files.encoding": "utf8",
  // ファイルを開く際、文字セットとエンコードを推測する
  "files.autoGuessEncoding": true,
  // 行の折り返し
  "editor.wordWrap": "on",
  // 最終行を改行で終わる
  "files.insertFinalNewline": true,
  // 保存時に最終行の空行をトリミング
  "files.trimFinalNewlines": true,
  // 選択文字列にクウォート系を記述する際、クウォートで囲まない（選択文字列を上書き）。
  "editor.autoSurround": "never",
  // スペニットを最後に表示する
  "editor.snippetSuggestions": "bottom",
  // ターミナル上では選択したら自動でコピー
  "terminal.integrated.copyOnSelection": true,
  // ターミナル上での複数行コピペを警告しない
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  // ターミナルのタブを表示しない
  "terminal.integrated.tabs.enabled": false,
  // ターミナル補完を無効化
  "terminal.integrated.suggest.enabled": false,
  // 定義参照時に必ずpeekを開く
  "editor.definitionLinkOpensInPeek": true,
  // references infoを非表示
  "editor.codeLens": false,
  // 検索時にgitignore以下のファイルを除去しない
  "search.useIgnoreFiles": false,
  // 検索時に、以前の履歴を優先しない
  "editor.suggestSelection": "first",
  // 削除時に確認しない
  "explorer.confirmDelete": false,
  // 削除したファイルは閉じる
  "workbench.editor.closeOnFileDelete": true,
  // 拡張機能のおすすめを表示しない
  "extensions.ignoreRecommendations": true,
  // 言語設定の矯正を無効化
  "workbench.editor.untitled.hint": "hidden",
  // セキュリティ系オプションの無効化
  "security.workspace.trust.enabled": false,
  "security.workspace.trust.emptyWindow": false,
  // ファイルの自動保存を有効化
  "files.autoSave": "afterDelay",

  // =====================================================
  // 表示設定
  // =====================================================
  // スムーズスクロール
  "editor.smoothScrolling": true,
  // カーソル下のハイライトを無効化
  "editor.occurrencesHighlight": "multiFile",
  // カッコのハイライトを無効
  "editor.matchBrackets": "near",
  // BracketPairColorizeを有効にする
  "editor.bracketPairColorization.enabled": true,
  // inlay hitsを無効化
  "editor.inlayHints.enabled": "off",
  // フォント設定
  // // mac
  // "editor.fontSize": 15, // フォントサイズ
  // "editor.lineHeight": 16, // 行間幅
  // "editor.letterSpacing": -0.63, // 文字の横幅
  // "window.zoomLevel": 0.7, // ズームレベル
  // windows
  "editor.fontFamily": "Consolas, 'Courier New', monosipace", // フォント設定
  "editor.fontSize": 17, // フォントサイズ
  "editor.lineHeight": 16, // 行間幅
  "editor.letterSpacing": -1.0, // 文字の横幅
  "window.zoomLevel": 0.7, // ズームレベル
  // アイコン設定（拡張機能）
  "workbench.iconTheme": "vscode-icons",
  // アクティビティーバーの位置を上部にする
  "workbench.activityBar.location": "top",
  // コードの折りたたみを無効化
  "editor.folding": false,
  // ミニマップを表示しない
  "editor.minimap.enabled": false,
  // 空白文字を表示する
  "editor.renderWhitespace": "boundary",
  // 制御文字を表示する
  "editor.renderControlCharacters": true,
  // 可変変数につくアンダーラインを無効化
  "editor.semanticTokenColorCustomizations": {
    "enabled": true,
    "rules": {
      "*.mutable": {
        "underline": false,
      }
    }
  },

  /* 色設定カスタマイズ */
  "workbench.colorTheme": "Default Dark+",
  "workbench.colorCustomizations": {
    // エディタバックグラウンドの色
    "editor.background": "#131313",
  },
  "editor.tokenColorCustomizations": {
    // コメントカスタマイズ
    "comments": {
      "foreground": "#707070",
      "fontStyle": ""
    }
  },

  /* 定義移動表示系 */
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromCodeNavigation": true,
  "editor.gotoLocation.alternativeDefinitionCommand": "",
  "editor.gotoLocation.alternativeTypeDefinitionCommand": "",
  "editor.gotoLocation.multipleDeclarations": "gotoAndPeek",
  "editor.gotoLocation.multipleDefinitions": "gotoAndPeek",
  "editor.gotoLocation.multipleImplementations": "gotoAndPeek",
  "editor.gotoLocation.multipleReferences": "gotoAndPeek",
  "editor.gotoLocation.multipleTypeDefinitions": "gotoAndPeek",

  // =====================================================
  // タブ・改行コード系
  // =====================================================
  // 改行コード（LF→\n, CRLF→\r\n）
  "files.eol": "\n",
  // Tabでインデント
  "editor.insertSpaces": false,
  // タブのスペースサイズ
  "editor.tabSize": 4,
  // インデント設定自動検出
  "editor.detectIndentation": true,
  // 言語ごとのインデント設定
  "[Log]": {
    "editor.wordWrap": "off"
  },
  "[c]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4,
  },
  "[cpp]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4,
  },
  "[go]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4,
  },
  "[rust]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
  },
  "[csharp]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
  },
  "[java]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
  },
  "[python]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.formatOnType": true,
  },
  "[ruby]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[shellscript]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4,
  },
  "[html]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[css]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[javascript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[typescript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[xml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[json]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[jsonc]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[dockerfile]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
  },

  // =====================================================
  /* 拡張機能ごとの設定 */
  // =====================================================
  // -- C++
  "C_Cpp.autocompleteAddParentheses": true,

  // --- Rust
  "rust-analyzer.completion.callable.snippets": "add_parentheses",
  "rust-analyzer.check.command": "clippy",

  // --- GoLang
  "go.toolsManagement.autoUpdate": true,

  // --- Java
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.compile.nullAnalysis.mode": "automatic",

  // --- Python
  "python.analysis.completeFunctionParens": true,
  "python.analysis.autoImportCompletions": true,

  // --- Code Runner
  "code-runner.runInTerminal": true,
  "code-runner.preserveFocus": false,
  "code-runner.executorMap": {
    "javascript": "node",
    "java": "cd $dir && javac $fileName && java $fileNameWithoutExt",
    "c": "cd $dir && gcc $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "cpp": "cd $dir && g++ -std=c++20 $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "objective-c": "cd $dir && gcc -framework Cocoa $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "php": "php",
    "python": "uv run",
    "perl": "perl",
    "perl6": "perl6",
    "ruby": "ruby",
    "go": "go run",
    "lua": "lua",
    "groovy": "groovy",
    "powershell": "powershell -ExecutionPolicy ByPass -File",
    "bat": "cmd /c",
    "shellscript": "bash",
    "fsharp": "fsi",
    "csharp": "scriptcs",
    "vbscript": "cscript //Nologo",
    "typescript": "ts-node",
    "coffeescript": "coffee",
    "scala": "scala",
    "swift": "swift",
    "julia": "julia",
    "crystal": "crystal",
    "ocaml": "ocaml",
    "r": "Rscript",
    "applescript": "osascript",
    "clojure": "lein exec",
    "haxe": "haxe --cwd $dirWithoutTrailingSlash --run $fileNameWithoutExt",
    "rust": "RUST_BACKTRACE=1 cargo run # $filename",
    "racket": "racket",
    "scheme": "csi -script",
    "ahk": "autohotkey",
    "autoit": "autoit3",
    "dart": "dart",
    "pascal": "cd $dir && fpc $fileName && $dir$fileNameWithoutExt",
    "d": "cd $dir && dmd $fileName && $dir$fileNameWithoutExt",
    "haskell": "runhaskell",
    "nim": "nim compile --verbosity:0 --hints:off --run",
    "lisp": "sbcl --script",
    "kit": "kitc --run",
    "v": "v run",
    "sass": "sass --style expanded",
    "scss": "scss --style expanded",
    "less": "cd $dir && lessc $fileName $fileNameWithoutExt.css",
    "FortranFreeForm": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "fortran-modern": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "fortran_fixed-form": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "fortran": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "sml": "cd $dir && sml $fileName"
  },

  // --- GitHub Copilot
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "scminput": true,
    "markdown": true
  },
  "github.copilot.nextEditSuggestions.enabled": true,

  // --- Visual Studio IntelliCode
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // --- git
  "git.openRepositoryInParentFolders": "always",
  "gitlens.rebaseEditor.openOnPausedRebase": false,

  // --- MY SQL
  "database-client.autoSync": true,

  // --- mawkdown preview github styles
  "markdown-preview-github-styles.colorTheme": "light",

  // --- vim
  // - option -
  "vim.useSystemClipboard": true,  // クリップボードを有効化
  "vim.hlsearch": false,  // 検索結果のハイライトを無効化
  "vim.visualstar": true,  // *で配下のワードを検索
  "vim.foldfix": true,  //  移動の際に折りたたみを展開しない
  "vim.easymotion": true,  // easy-motion有効化
  "vim.highlightedyank.enable": true,  // yank時にハイライトする
  "vim.easymotionKeys": ";hklyuiopnm,qwertasdgzxcvbjf",  // easy-motionに使用するキー
  // - keybind -
  // Leader
  "vim.leader" : "t",
  // false bind
  "vim.handleKeys": {
    "<C-c>": false,  // コピー
    "<C-a>": false,  // 全選択
    "<C-f>": false,  // 検索
    "<C-q>": false,  // peekwindowを閉じる
  },
  // InsertMode
  "vim.insertModeKeyBindings": [
     {"before":["j","j"], "after":["<Esc>"]},  //jjでノーマルモードに戻る
  ],
  // NormalModede
  "vim.normalModeKeyBindingsNonRecursive": [
    // 移動設定
    {"before":["j"], "after":["g","j"]},
    {"before":["k"], "after":["g","k"]},
    // 便利コマンド
    {"before":["<Leader>","a"], "after":["g","g","V","G"]},
    // path copy
    {"before":["<Leader>","y"], "commands":["copyRelativeFilePath"]},
    {"before":["<Leader>","Y"], "commands":["copyFilePath"]},
    // window、タブ設定分割関連
    {"before":["<Leader>","v"], "commands":[":vsplit"]},
    {"before":["<Leader>","s"], "commands":[":split"]},
    {"before":["<Leader>","h"], "after":["<C-w>","h"]},
    {"before":["<Leader>","j"], "after":["<C-w>","j"]},
    {"before":["<Leader>","k"], "after":["<C-w>","k"]},
    {"before":["<Leader>","l"], "after":["<C-w>","l"]},
    {"before":["<Leader>","H"], "commands":["workbench.action.moveEditorToLeftGroup"]},
    {"before":["<Leader>","J"], "commands":["workbench.action.moveEditorToBelowGroup"]},
    {"before":["<Leader>","K"], "commands":["workbench.action.moveEditorToAboveGroup"]},
    {"before":["<Leader>","L"], "commands":["workbench.action.moveEditorToRightGroup"]},
    {"before":["<Leader>","t"], "commands":[":tabnew"]},
    {"before":["<Leader>","n"], "commands":[":tabnext"]},
    {"before":["<Leader>","p"], "commands":[":tabprevious"]},
    {"before":["<Leader>","N"], "commands":[":tabm +1"]},
    {"before":["<Leader>","P"], "commands":[":tabm -1"]},
    {"before":["<Leader>","enter"], "commands":["workbench.action.keepEditor"]},
    {"before":["<Leader>","q"], "commands":["workbench.action.closeActiveEditor"]},
    {"before":["<Leader>","Q"], "commands":["workbench.action.closeEditorsInGroup"]},
    {"before":["<Leader>","K"], "commands":["workbench.action.closeAllEditors"]},
    // 検索系
    {"before":["<Esc>"], "commands": [":nohl"]},
    // easy-searchキーバインド
    {"before":["s"], "after":["<Leader>","<Leader>","2","s"]},
    // 進む、戻る系
    {"before":["<C-i>"], "command":["workbench.action.navigateForward"]},
    {"before":["<C-o>"], "command":["workbench.action.navigateBack"]},
    // // 定義元、参照先
    // {"before":["<C-h>"], "commands":["editor.action.peekDefinition"]},
    // {"before":["<C-k>"], "commands":["workbench.action.moveEditorToFirstGroup","editor.action.revealDefinitionAside"]},
    // {"before":["<C-l>"], "commands":["workbench.action.moveEditorToFirstGroup","workbench.action.splitEditorRight","workbench.action.moveEditorToNextGroup","editor.action.goToReferences"]},
    // {"before":["<C-w>"], "commands":["workbench.action.closeActiveEditor","workbench.action.focusFirstEditorGroup","workbench.action.moveEditorToRightGroup"]},
  ],
  // VisualMode
  "vim.visualModeKeyBindingsNonRecursive": [
    // 移動設定
    {"before":["j"], "after":["g","j"]},
    {"before":["k"], "after":["g","k"]},
    // 便利コマンド
    {"before":["<Leader>","a"], "after":["g","g","V","G"]},
    // path copy
    {"before":["<Leader>","y"], "commands":["copyRelativeFilePath"]},
    {"before":["<Leader>","Y"], "commands":["copyFilePath"]},
    // window、タブ設定分割関連
    {"before":["<Leader>","v"], "commands":[":vsplit"]},
    {"before":["<Leader>","s"], "commands":[":split"]},
    {"before":["<Leader>","h"], "after":["<C-w>","h"]},
    {"before":["<Leader>","j"], "after":["<C-w>","j"]},
    {"before":["<Leader>","k"], "after":["<C-w>","k"]},
    {"before":["<Leader>","l"], "after":["<C-w>","l"]},
    {"before":["<Leader>","H"], "commands":["workbench.action.moveEditorToLeftGroup"]},
    {"before":["<Leader>","J"], "commands":["workbench.action.moveEditorToBelowGroup"]},
    {"before":["<Leader>","K"], "commands":["workbench.action.moveEditorToAboveGroup"]},
    {"before":["<Leader>","L"], "commands":["workbench.action.moveEditorToRightGroup"]},
    {"before":["<Leader>","t"], "commands":[":tabnew"]},
    {"before":["<Leader>","n"], "commands":[":tabnext"]},
    {"before":["<Leader>","p"], "commands":[":tabprevious"]},
    {"before":["<Leader>","N"], "commands":[":tabm +1"]},
    {"before":["<Leader>","P"], "commands":[":tabm -1"]},
    {"before":["<Leader>","enter"], "commands":["workbench.action.keepEditor"]},
    {"before":["<Leader>","q"], "commands":["workbench.action.closeActiveEditor"]},
    {"before":["<Leader>","Q"], "commands":["workbench.action.closeEditorsInGroup"]},
    {"before":["<Leader>","K"], "commands":["workbench.action.closeAllEditors"]},
    // 検索系
    {"before":["<Esc>"], "commands": [":nohl"]},
    // easy-searchキーバインド
    {"before":["s"], "after":["<Leader>","<Leader>","2","s"]},
    // 進む、戻る系
    {"before":["<C-i>"], "command":["workbench.action.navigateForward"]},
    {"before":["<C-o>"], "command":["workbench.action.navigateBack"]},
    // // 定義元、参照先
    // {"before":["<C-h>"], "commands":["editor.action.peekDefinition"]},
    // {"before":["<C-k>"], "commands":["workbench.action.moveEditorToFirstGroup","editor.action.revealDefinitionAside"]},
    // {"before":["<C-l>"], "commands":["workbench.action.moveEditorToFirstGroup","workbench.action.splitEditorRight","workbench.action.moveEditorToNextGroup","editor.action.goToReferences"]},
    // {"before":["<C-w>"], "commands":["workbench.action.closeActiveEditor","workbench.action.focusFirstEditorGroup","workbench.action.moveEditorToRightGroup"]},
  ],

  /* ----------- ここまで --------------*/
}
